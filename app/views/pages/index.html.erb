<% provide(:title, 'Protest Australia') %>

<nav class="nav-buttons">
	<div class="nav-item">
		<div class="menu-item-content">
			<%= link_to protests_path do %>
				<div class="icon">
					<span class="helper"></span>
					<img src="assets/protest_icon_yellow_64px.png" onmouseover="this.src='assets/protest_icon_64px.png'" onmouseout="this.src='assets/protest_icon_yellow_64px.png'" alt="Protests icon" id="protest-icon">
				</div>
			<% end %>
			<%= link_to "Protests", protests_path, class: "nav-item-text" %>
		</div>

	</div>
	<div class="nav-item">
		<div class="menu-item-content">
			<%= link_to new_path do %><div class="icon"><i class="fa fa-plus red"></i></div><% end %>
			<%= link_to "Add a Protest", new_path, class: "nav-item-text" %>
		</div>
	</div>

	<div class="nav-item">
		<div class="menu-item-content">
			<%= link_to my_protests_path do %><div class="icon"><i class="fa fa-user green"></i></div><% end %>
			<%= link_to "My Protests", my_protests_path, class: "nav-item-text" %>
		</div>
	</div>

	<div class="nav-item">
		<div class="menu-item-content">
			<%= link_to related_sites_path do %><div class="icon"><i class="fa fa-link pale-blue"></i></div><% end %>
			<%= link_to "Related Sites", related_sites_path, class: "nav-item-text" %>
		</div>
	</div>
</nav>
<div class="main-content">
	<div class="recent-protests">
		<div class="recent-protests-heading">Recently added protests</div>
		<% if @recent_protests.any? %>
		<ul>
			<%= render partial: "recent", collection: @recent_protests.reverse %>
		</ul>
		<% else %>
			<p>There are no protests available</p>
		<% end %>
	</div>
	<div class="clear"></div>
	<h2 class="front-page-title">Protest Australia</h2>
</div><!-- main-content -->

